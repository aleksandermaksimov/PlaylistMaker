<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style_header">
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">@dimen/dp_26</item>
        <item name="android:paddingHorizontal">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="main_activity_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/white_always</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/black_always</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_8</item>
        <item name="iconSize">@dimen/dp_24</item>
        <item name="iconTint">?attr/black_always</item>
        <item name="cornerRadius">@dimen/dp_16</item>
    </style>

    <style name="settings_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:lineHeight">@dimen/dp_19</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_0</item>
        <item name="android:layout_marginTop">@dimen/dp_19</item>
        <item name="android:layout_marginBottom">@dimen/dp_18</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settings_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_19</item>
        <item name="android:layout_marginBottom">@dimen/dp_18</item>
        <item name="tint">?attr/text_gray_to_white</item>
    </style>

    <style name="header_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="tint">?attr/black_to_white</item>
    </style>
    
    <style name="search_edit_text">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:drawableStart">@drawable/search_icon__16x16</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="drawableTint">?attr/text_gray_to_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">?attr/text_gray_to_black</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?attr/black_always</item>
        <item name="android:maxLength">15</item>
        <item name="android:paddingHorizontal">@dimen/dp_12</item>
        <item name="android:paddingVertical">@dimen/dp_9</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">@dimen/dp_19</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>