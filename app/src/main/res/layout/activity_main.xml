<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/blue_to_black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">

        <TextView
            style="@style/text_style_header"
            android:text="@string/app_title"
            android:textColor="?attr/white_always" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_8"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_20">

        <Button
            android:id="@+id/search_button"
            style="@style/main_activity_button"
            android:text="@string/search_text"
            app:icon="@drawable/search_icon" />

        <Button
            android:id="@+id/media_library_button"
            style="@style/main_activity_button"
            android:text="@string/media_text"
            app:icon="@drawable/media_icon" />

        <Button
            android:id="@+id/settings_button"
            style="@style/main_activity_button"
            android:text="@string/settings_text"
            app:icon="@drawable/settings_icon" />
    </LinearLayout>
</LinearLayout>